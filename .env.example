# ==================== LOCAL DEVELOPMENT ====================
# Database (local PostgreSQL)
# DATABASE_URL="postgresql://username:password@localhost:5432/fantacontratti?schema=public"

# ==================== PRODUCTION (Vercel + Neon) ====================
# Database (Neon PostgreSQL) - get from Neon dashboard
DATABASE_URL=postgresql://user:password@ep-xxx-pooler.region.aws.neon.tech/dbname?sslmode=require
DATABASE_URL_UNPOOLED=postgresql://user:password@ep-xxx.region.aws.neon.tech/dbname?sslmode=require

# JWT Secrets (CHANGE IN PRODUCTION! Use random 32+ char strings)
JWT_ACCESS_SECRET="your-access-secret-min-32-chars-random"
JWT_REFRESH_SECRET="your-refresh-secret-min-32-chars-random"

# API (local development only)
API_PORT=3003
FRONTEND_URL="http://localhost:5173"

# App
VITE_APP_NAME="Fantacontratti"
VITE_APP_ENV="development"
# VITE_API_URL is not needed in production (same origin)
VITE_API_URL="http://localhost:3003"

# Email Provider - choose "gmail" or "resend"
EMAIL_PROVIDER="gmail"

# Gmail (recommended for simplicity)
# Create App Password: https://myaccount.google.com/apppasswords
GMAIL_USER="youremail@gmail.com"
GMAIL_APP_PASSWORD="xxxx xxxx xxxx xxxx"

# Resend (alternative - for custom domain)
# Get API key from https://resend.com/api-keys
# RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
# RESEND_FROM_EMAIL="noreply@yourdomain.com"

# API-Football (v3) - Get API key from https://www.api-football.com/
API_FOOTBALL_KEY="your-api-football-key"
