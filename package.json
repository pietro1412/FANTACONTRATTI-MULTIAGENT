{
  "name": "fantacontratti",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Piattaforma per la gestione dei mercati del fantacalcio dinastico",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:client\"",
    "dev:client": "vite",
    "dev:api": "tsx watch src/api/index.ts",
    "build": "vite build",
    "build:api": "node scripts/build-api.mjs",
    "vercel-build": "prisma generate --schema=prisma/schema.generated.prisma && prisma db push --schema=prisma/schema.generated.prisma --accept-data-loss && node scripts/build-api.mjs && vite build",
    "postinstall": "prisma generate --schema=prisma/schema.generated.prisma",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "db:generate": "prisma generate --schema=prisma/schema.generated.prisma",
    "db:migrate": "prisma migrate dev --schema=prisma/schema.generated.prisma",
    "db:push": "prisma db push --schema=prisma/schema.generated.prisma",
    "db:studio": "prisma studio --schema=prisma/schema.generated.prisma",
    "db:seed": "tsx prisma/seed.ts",
    "db:init-prod": "tsx scripts/init-production.ts",
    "db:build-schema": "tsx scripts/build-schema.ts",
    "db:backup": "node scripts/backup-critical-data.cjs",
    "predeploy": "npm run db:backup",
    "deploy:main": "npm run db:backup && git checkout main && git pull origin main && git merge develop --no-edit && git push origin main && git checkout develop",
    "docker:up": "docker compose up db -d --wait",
    "docker:up:test": "docker compose up db-test -d --wait",
    "docker:down": "docker compose down",
    "db:local:setup": "npm run docker:up && bash scripts/with-env.sh .env.local npx prisma db push --schema=prisma/schema.generated.prisma --accept-data-loss && bash scripts/with-env.sh .env.local npx tsx prisma/seed.ts",
    "db:test:setup": "npm run docker:up:test && bash scripts/with-env.sh .env.test npx prisma db push --schema=prisma/schema.generated.prisma --accept-data-loss",
    "dev:local": "bash scripts/with-env.sh .env.local npx concurrently \"npm run dev:api\" \"npm run dev:client\"",
    "test:integration": "bash scripts/with-env.sh .env.test npx vitest run tests/integration",
    "test:all": "vitest run"
  },
  "keywords": [
    "fantacalcio",
    "dynasty",
    "fantasy-football"
  ],
  "author": "Pietro",
  "license": "MIT",
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@prisma/client": "^5.22.0",
    "@types/pdfkit": "^0.17.4",
    "@vercel/speed-insights": "^1.3.1",
    "bcryptjs": "^3.0.3",
    "canvas-confetti": "^1.9.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "nanoid": "^5.1.6",
    "nodemailer": "^7.0.12",
    "pdfkit": "^0.17.2",
    "pusher": "^5.2.0",
    "pusher-js": "^8.4.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.11.0",
    "resend": "^6.7.0",
    "xlsx": "^0.18.5",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.3",
    "@types/nodemailer": "^7.0.5",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^11.0.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "jsdom": "^27.3.0",
    "nodemon": "^3.1.11",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "prisma": "^5.22.0",
    "tailwindcss": "^3.4.19",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  }
}
